{
  "name": "@flexi-ui/theme",
  "version": "1.0.0",
  "description": "The default theme for FlexiUI components",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Muneeb Mughal",
    "email": "muneebmughal3324@gmail.com",
    "url": "https://github.com/Muneeb-Mughal-Dev"
  },
  "homepage": "https://github.com/awalsolution",
  "repository": {
    "type": "git",
    "url": "https://github.com/flexi-ui/flexi-ui.git"
  },
  "bugs": {
    "url": "https://github.com/flexi-ui/flexi-ui/issues"
  },
  "license": "MIT",
  "keywords": [
    "ui",
    "css",
    "theme",
    "design",
    "theming",
    "classNames",
    "components"
  ],
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/lib.umd.cjs",
  "module": "./dist/lib.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./dist/lib.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.umd.cjs",
      "default": "./dist/lib.js"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "pnpm build --watch",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "@flexi-ui/shared-utils": "workspace:*",
    "clsx": "^2.1.1",
    "color": "^4.2.3",
    "color2k": "^2.0.2",
    "deepmerge": "4.3.1",
    "flat": "^6.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.3.0"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.4.0"
  },
  "devDependencies": {
    "@types/color": "^4.2.0",
    "@types/flat": "^5.0.5",
    "clean-package": "2.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:"
  }
}
